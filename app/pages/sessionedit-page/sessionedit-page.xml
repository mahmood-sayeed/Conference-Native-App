<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="pageNavigatingTo" actionBarHidden="true" backgroundSpanUnderStatusBar="true">

    <GridLayout rows="auto, *" class="page-content">
        <!-- HEADER -->
        <StackLayout class="page-header">
            <GridLayout class="action-bar">
                <StackLayout tap="backTap" orientation="horizontal" class="action-wrap" horizontalAlignment="left">
                    <Image stretch="none" class="icon-image" src="res://ic_arrow_back"/>
                    <Label text="Back" class="back-text" />
                </StackLayout>

                <Label text="{{ name }}" class="action-bar-title" />
            </GridLayout>
        </StackLayout>
        <!-- Content -->
        <GridLayout row="1" class="content">
            <StackLayout class="form">

                <StackLayout class="input-field">
                    <Label text="Session Id" class="label font-weight-bold m-b-5" />
                    <Label text="{{ session.id }}" class="info-bigger bold" />
                    <StackLayout class="hr-light"></StackLayout>
                </StackLayout>

                <GridLayout class="input-field input-sides" rows="auto, auto, auto" columns="*,*">
                    <Label text="Title" class="label font-weight-bold" row="0" col="0" />
                    <TextField class="input right" row="0" col="1" text="{{ session.title }}" />
                    <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
                </GridLayout>

                <GridLayout class="input-field input-sides" rows="auto, auto, auto" columns="*,*">
                    <Label text="Description" class="label font-weight-bold" row="0" col="0" />
                    <TextField class="input right" row="0" col="1" text="{{ session.description }}" />
                    <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
                </GridLayout>

                <GridLayout class="input-field input-sides" rows="auto, auto, auto" columns="*,*">
                    <Label text="Starts" class="label font-weight-bold" row="0" col="0" />
                    <TextField class="input right" row="0" col="1" text="{{ session.start }}" />
                    <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
                </GridLayout>

                <GridLayout class="input-field input-sides" rows="auto, auto, auto" columns="*,*">
                    <Label text="Ends" class="label font-weight-bold" row="0" col="0" />
                    <TextField class="input right" row="0" col="1" text="{{ session.end }}" />
                    <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
                </GridLayout>

                <GridLayout class="input-field input-sides" rows="auto, auto, auto" columns="*,*">
                    <Label text="Room" class="label font-weight-bold" row="0" col="0" />
                    <ListPicker items="{{ rooms }}" textField="name" valueField="roomId" selectedIndex = "1" loaded="onListPickerLoaded" class="p-15 picker" row="0" col="1"/>
                    <StackLayout class="hr-light" row="1" colSpan="2"></StackLayout>
                </GridLayout>

                <Button text="Save" tap="onSessionSave" class="btn btn-primary btn-rounded-lg btn-active" />

            </StackLayout>
            <ActivityIndicator busy="{{ isLoading }}" horizontalAlignment="center" verticalAlignment="center" />
        </GridLayout>
    </GridLayout>

</Page>